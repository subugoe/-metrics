{
  "name": "metrics",
  "version": "0.0.1",
  "description": "Lorem ipsum dolor sit amut.",
  "contributors": "-",
  "homepage": "https://www.sub.uni-goettingen.de",
  "author": "Nils Windisch <windisch@sub.uni-goettingen.de>",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "cssnano": "^3.10.0",
    "foundation-sites": "6.3.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.1",
    "nodemon": "^1.12.1",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "pretty-exceptions": "^1.1.2",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.7.0"
  },
  "scripts": {
    "sass": "node-sass --output-style compressed --source-map-embed $(PWD)/_scss/style.scss > $(PWD)/css/style.css",
    "sass_win": "node-sass --output-style compressed --source-map-embed %cd%/_scss/style.scss > %cd%/css/style.css",
    "prefix": "postcss --use autoprefixer -b 'last 2 versions' < $(PWD)/css/style.css | postcss --use cssnano > $(PWD)/css/style.min.css",
    "prefix_win": "postcss --use autoprefixer -b \"last 2 versions\" < %cd%/css/style.css | postcss --use cssnano > %cd%/css/style.min.css",
    "sass_build": "node-sass --output-style compressed $(PWD)/_scss/style.scss > $(PWD)/css/style.css",
    "sass_build_win": "node-sass --output-style compressed %cd%/_scss/style.scss > %cd%/css/style.css",
    "sass_raw": "node-sass --output-style expanded --source-map-embed $(PWD)/_scss/style.scss > $(PWD)/css/style.css",
    "sass_raw_win": "node-sass --output-style expanded --source-map-embed %cd%/_scss/style.scss > %cd%/css/style.css",
    "prefix_raw": "postcss --use autoprefixer -b 'last 2 versions' < $(PWD)/css/style.min.css",
    "prefix_raw_win": "postcss --use autoprefixer -b \"last 2 versions\" < %cd%/css/style.min.css",
    "prefix_build": "postcss --no-map --use autoprefixer -b 'last 2 versions' < $(PWD)/css/style.css | postcss --no-map --use cssnano > $(PWD)/css/style.min.css",
    "prefix_build_win": "postcss --no-map --use autoprefixer -b \"last 2 versions\" < %cd%/css/style.css | postcss --no-map --use cssnano > %cd%/css/style.min.css",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "watch:css_win": "nodemon -e scss -x \"npm run build:css_win\"",
    "build:css": "npm run sass && npm run prefix",
    "build:css_win": "npm run sass_win && npm run prefix_win",
    "watch:jekyll": "bundle exec jekyll b -w",
    "build:jekyll": "bundle exec jekyll b --config _dev.yml",
    "jekyll_build": "bundle exec jekyll b",
    "serve": "live-server metrics-website --watch=$(PWD)/metrics-website",
    "serve_win": "live-server metrics-website --watch=%cd%/metrics-website",
    "run:css": "nodemon -e scss -x \"npm run build:css && npm run build:jekyll\"",
    "run:css_win": "nodemon -e scss -x \"npm run build:css_win && npm run build:jekyll\"",
    "run:jekyll": "nodemon -e md,html,markdown,js,svg --delay 2 --ignore metrics-website -x \"npm run build:jekyll\"",
    "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"SERVE,SASS,JEKYLL\" \"npm run serve\" \"npm run run:css\" \"npm run run:jekyll\"",
    "dev_win": "concurrently --kill-others --prefix \"[{name}]\" --names \"SERVE,SASS,JEKYLL\" \"npm run serve_win\" \"npm run run:css_win\" \"npm run run:jekyll\"",
    "go": "npm run dev > npm.log",
    "go_win": "npm run dev_win > npm.log",
    "prod": "npm run sass_build && npm run prefix_build && npm run jekyll_build",
    "prod_win": "npm run sass_build_win && npm run prefix_build_win && npm run jekyll_build",
    "cleanup": "trash metrics-website",
    "log": "open npm.log /Applications/Utilities/Console.app/"
  }
}
