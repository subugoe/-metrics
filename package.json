{
  "name": "metrics",
  "version": "0.0.1",
  "description": "Lorem ipsum dolor sit amut.",
  "contributors": "-",
  "homepage": "https://www.sub.uni-goettingen.de",
  "author": "Nils Windisch <windisch@sub.uni-goettingen.de>",
  "devDependencies": {
    "concurrently": "^3.4.0",
    "cssnano": "^3.10.0",
    "foundation-sites": "^6.3.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.1",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "pretty-exceptions": "^1.1.2"
  },
  "scripts": {
    "sass": "node-sass --output-style compressed --source-map-embed ~/dev/sub/metrics/_scss/style.scss > ~/dev/sub/metrics/css/style.css",
    "prefix": "postcss --use autoprefixer -b 'last 2 versions' < ~/dev/sub/metrics/css/style.css | postcss --use cssnano > ~/dev/sub/metrics/css/style.min.css",
    "sass_build": "node-sass --output-style compressed ~/dev/sub/metrics/_scss/style.scss > ~/dev/sub/metrics/css/style.css",
    "sass_raw": "node-sass --output-style expanded --source-map-embed ~/dev/sub/metrics/_scss/style.scss > ~/dev/sub/metrics/css/style.css",
    "prefix_raw": "postcss --use autoprefixer -b 'last 2 versions' < ~/dev/sub/metrics/css/style.min.css",
    "prefix_build": "postcss --no-map --use autoprefixer -b 'last 2 versions' < ~/dev/sub/metrics/css/style.css | postcss --no-map --use cssnano > ~/dev/sub/metrics/css/style.min.css",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "build:css": "npm run sass && npm run prefix",
    "watch:jekyll": "bundle exec jekyll b -w",
    "build:jekyll": "bundle exec jekyll b -I",
    "jekyll_build": "bundle exec jekyll b",
    "serve": "live-server metrics-website --watch=$(PWD)/metrics-website --browser='Google Chrome'",
    "run:css": "nodemon -e scss -x \"npm run build:css && npm run build:jekyll\"",
    "run:jekyll": "nodemon -e md,html,markdown,js,svg --delay 2 --ignore metrics-website -x \"npm run build:jekyll\"",
    "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"SERVE,SASS,JEKYLL\" \"npm run serve\" \"npm run run:css\" \"npm run run:jekyll\"",
    "go": "npm run dev > npm.log",
    "prod": "npm run sass_build && npm run prefix_build && npm run jekyll_build",
    "cleanup": "trash metrics-website"
  }
}
